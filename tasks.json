{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "SC Build",
            "command": "/root/sc_build_dll.bash",
            "args": [
                "build",
                "${file}",
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "SC Debug Build",
            "command": "/root/sc_build_dll.bash",
            "args": [
                "build_debug",
                "${file}",
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}